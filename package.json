{
  "name": "steam-spec-finder",
  "version": "1.0.0",
  "description": "Search Steam games and view minimum/recommended system requirements.",
  "main": "electron-main.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "desktop": "electron .",
    "dist:win": "electron-builder --win nsis"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.david.steamspecfinder",
    "productName": "SteamSpecFinder",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
